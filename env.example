# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key

# Supabase Service Role (solo server-side, NUNCA exponer al cliente)
SUPABASE_SERVICE_ROLE_KEY=

# URL de la aplicación (para callbacks de OAuth)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Clave para firmar tokens de baja (generar con: openssl rand -base64 32)
UNSUBSCRIBE_TOKEN_SECRET=

# Clave para cifrar tokens y credenciales IMAP/SMTP (generar con: openssl rand -base64 32)
# IMPORTANTE: Esta clave también se usa para cifrar passwords de cuentas IMAP/SMTP.
# Si la perdés, las credenciales guardadas quedarán ilegibles.
TOKEN_ENCRYPTION_KEY=

# Google OAuth (las mismas credenciales configuradas en Supabase Auth)
# Solo necesario si querés usar Gmail API o Google Sheets para contactos.
# Para proveedores IMAP/SMTP (Hostinger, etc.) no es necesario.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Upstash QStash (para scheduling de envíos)
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=